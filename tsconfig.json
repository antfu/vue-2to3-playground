{
  "compilerOptions": {
    "baseUrl": ".",
    "sourceMap": false,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "allowJs": false,
    "strict": true,
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": false,
    "jsx": "preserve",
    "lib": ["esnext", "dom"],
    "paths": {
      "@vue/*": ["../vue-next/packages/*/src"],
      "vue": ["../vue-next/packages/vue/src"]
    }
  },
  "include": [
    "../vue-next/packages/global.d.ts",
    "../vue-next/packages/*/src",
    "../vue-next/packages/runtime-dom/types/jsx.d.ts",
    ".",
    "../vue-composition-api/src",
  ]
}
